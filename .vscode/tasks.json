{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "docker-build",
			"type": "docker-build",
			"dockerBuild": {
				"tag": "plextranscoder:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile"
			},
			"platform": "node",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"revealProblems": "onProblem",
				"clear": true
			}
		},
		{
			"label": "docker-run: debug",
			"type": "docker-run",
			"dependsOn": "docker-build",
			"dockerRun": {
				"containerName": "plex-transcoder",
				"remove": true,
				"env": {
					"TRANSCODER_PORT": "34800"
				},
				"ports": [
					{
						"containerPort": 34800,
						"hostPort": 34800,
						"protocol": "tcp"
					}
				],
				"volumes": [
					{
						"localPath": "${env:USERPROFILE}/videos",
						"containerPath": "/data/movies"
					},
					{
						"localPath": "${env:USERPROFILE}/.plex/transcode",
						"containerPath": "/transcode"
					}
				]
			},
			"node": {
				"enableDebugging": true
			}			
		}
	]
}